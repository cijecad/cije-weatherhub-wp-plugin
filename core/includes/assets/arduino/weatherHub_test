#include <WiFi.h>
#include <HTTPClient.h>

// Replace with your registered station_id and passkey
const int station_id = 1; // Use your assigned station ID number
const char* passkey = "kFEaY9K6nWro";  // Replace with your actual passkey

// Replace with your network credentials
const char* ssid = "PutnamChalet";
const char* password = "67355976";

// Server URL
const char* serverName = "https://www.cijeweatherhub.site/wp-content/plugins/cije-weatherhub-wp-plugin/core/includes/classes/post-weather-data.php"; // Enter ServerName here


void setup() {
  Serial.begin(115200);

  // Connect to Wi-Fi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting to WiFi...");
  }
  Serial.println("Connected to WiFi");

  // Send test data to server
  sendData();
}

void loop() {
  // Do nothing in loop
}

void sendData() {
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    http.begin(serverName);
    http.addHeader("Content-Type", "application/x-www-form-urlencoded");

    // Dummy data for testing
    String httpRequestData = "station_id=" + String(station_id)
                           + "&passkey=" + String(passkey)
                           + "&temperature=" + String(25.0)
                           + "&humidity=" + String(50.0)
                           + "&pressure=" + String(1013.25)
                           + "&wind_speed=" + String(5.0)
                           + "&rain_inches=" + String(0.1);

    Serial.print("Sending data to server: ");
    Serial.println(httpRequestData); // Debugging statement

    int httpResponseCode = http.POST(httpRequestData);

    if (httpResponseCode > 0) {
      String response = http.getString();
      Serial.println(httpResponseCode);
      Serial.println(response);
    } else {
      Serial.print("Error on sending POST: ");
      Serial.println(httpResponseCode);
    }

    http.end();
  } else {
    Serial.println("WiFi Disconnected");
  }
}